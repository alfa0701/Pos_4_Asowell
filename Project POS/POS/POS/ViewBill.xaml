<Window x:Class="POS.ViewBill"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POS"
        mc:Ignorable="d"
        Title="ViewBill" Height="300" Width="300">
    <Grid Background="DarkOliveGreen">
        <ListView Margin="10,10,10.2,0" Name="lvBill" VerticalAlignment="Top" Background="#FFED5C5C">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Count" Width="100" DisplayMemberBinding="{Binding Count}"/>
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
