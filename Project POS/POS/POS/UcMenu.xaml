<UserControl x:Class="POS.UcMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:local="clr-namespace:POS"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignWidth="300"
             Height="609.804"
             Width="800"
             FontFamily="Segoe UI Black">
    <Grid>
        <materialDesign:ColorZone Mode="PrimaryDark"
                                  Height="40"
                                  CornerRadius="2"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth2"
                                  Margin="0,565,0,0">
            <StackPanel Orientation="Horizontal"
                        Margin="8">
                <Border Background="White"
                        MaxHeight="30"
                        CornerRadius="3"
                        ToolTip="Enter to search, ignore case">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button Style="{DynamicResource MaterialDesignToolButton}"
                                Command="{Binding SearchCommand}"
                                x:Name="SearchButton"
                                CommandParameter="{Binding ElementName=SearchBox, Path=Text}"
                                Height="24"
                                Width="24">
                            <materialDesign:PackIcon Kind="Magnify"
                                                     Opacity=".56" />
                        </Button>
                        <TextBox Foreground="Black"
                                 Grid.Column="1"
                                 Margin="5 0 0 0"
                                 KeyDown="Search_OnKeyDown"
                                 materialDesign:HintAssist.Hint="Search"
                                 x:Name="SearchBox"
                                 materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                 BorderThickness="0"
                                 MinWidth="200"
                                 VerticalAlignment="Center" />
                    </Grid>
                </Border>
            </StackPanel>
        </materialDesign:ColorZone>
        <dragablz:TabablzControl x:Name="tabControl"
                                 Background="DarkGray"
                                 Margin="0,10,0,49.6">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Icon\Vector-Iluustartor.png"
                               Height="30"
                               Width="30" />
                        <TextBlock Text="Beverages" />
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="ItemGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding Kinds}"
                             Grid.Row="1"
                             Margin="0 8 0 0"
                             x:Name="lvCategory"
                             PreviewMouseLeftButtonUp="lvCategory_PreviewMouseLeftButtonUp">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemHeight="100"
                                           ItemWidth="100" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="materialDesign:PackIconKind">
                                <DockPanel Width="80"
                                           Height="80"
                                           Background="Transparent">
                                    <TextBlock Text="{Binding Name}"
                                               Foreground="Black"
                                               DockPanel.Dock="Bottom"
                                               TextTrimming="CharacterEllipsis"
                                               HorizontalAlignment="Center" />
                                    <Image Source="{Binding ImageData}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Width="32"
                                           Height="32" />
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!--<ListView x:Name="lvCategory"
                              Height="Auto"
                              Width="Auto"
                              HorizontalAlignment="Center"
                              Grid.Row="5"
                              Grid.Column="5"
                              PreviewMouseLeftButtonUp="lvCategory_PreviewMouseLeftButtonUp">
